<h1>New blog post</h1>

<%= form_with model: @blog_post do |f| %>
  <% if f.object.errors.any? %>
    <div>
        <% f.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
    </div>
  <% end %>
  <div>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  </div>
<% end %>